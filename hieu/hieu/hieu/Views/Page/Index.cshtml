
@{
    ViewBag.Title = "Coca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/angular/Home.js"></script>
<!-- Hero Section End -->
<!-- Breadcrumb Section Begin -->
<div ng-app="NuocngotApp" ng-controller="HomeCtrl">
    <div ng-init="LoadData()"></div>
    <section class="breadcrumb-section set-bg" data-setbg="~/asset/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2 style="color:black">Sản phẩm</h2>
                        <div class="breadcrumb__option">
                            <a href="/Page/Index" style="color:black">Home</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Danh mục sản phẩm</h4>
                            <ul>
                                <li><a href="/Page/Coca">Coca</a></li>
                                <li><a href="/Page/Fanta">Fanta</a></li>
                                <li><a href="/Page/Sprite">Sprite</a></li>
                            </ul>
                        </div>

                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h3>Tất cả sản phẩm</h3>
                        </div>

                        <div class="container">
                            <div class="row">
                                <div class="col-md-4" ng-repeat="item in listAllData">
                                    <div>
                                        <div class="product__discount__item">
                                            <div class="product__discount__item__pic set-bg">
                                                <img src="~/{{item.Anh}}">
                                                <ul class="product__item__pic__hover">
                                                    <li>
                                                        <a class="addToCart" ng-click="addToCart(item)"><i class="fa fa-shopping-cart"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="/Page/Shopdetails/?MasP={{item.Masp}}" style="color:red">XEM</a>

                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="product__discount__item__text">
                                                <span>{{item.Ten}}</span>
                                                <div>{{item.Gia}} VNĐ</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </section>

    <!-- Product Section End -->
    <!-- Footer Section Begin -->
    <!-- Footer Section End -->
    <!-- Js Plugins -->

</div>


