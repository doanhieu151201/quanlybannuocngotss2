
@{
    ViewBag.Title = "Shopdetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
} <title>Chi tiết sản phẩm</title>

<script src="~/Scripts/angular/Home.js"></script>
<script src="~/Scripts/angular/Chitietsp.js"></script>

<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2 style="color:black">Chi tiết sản phẩm</h2>
                    <div class="breadcrumb__option">
                        <a href="/Home/Index"><h4>Trang chủ</h4></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->

<div ng-app="NuocngotApp" ng-controller="ChiTietCtrl">
    <div ng-init="LoadData(@ViewBag.Masp)"></div>
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                 src="~/{{SanPham.Anh}}" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>{{SanPham.Ten}}</h3>
                        <div class="product__details__rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                            <span>(18 Lượt bình chọn)</span>
                        </div>
                        <div class="product__details__price">{{SanPham.Gia}} VNĐ</div>

                        <h4>Nguyên liệu:</h4>

                        <span>
                            NƯỚC CÓI, XI-RÔ NGÔ FRUCTOSE CAO, AXIT CITRIC, NATRI BENZOATE (ĐỂ BẢO VỆ HƯƠNG VỊ), HƯƠNG VỊ TỰ NHIÊN,
                            TINH BỘT THỰC PHẨM BIẾN TÍNH, NATRI POLYPHOSPHATES, ESTE GLYCEROL CỦA ROSIN, VÀNG 6, ĐỎ 40.
                        </span>
                        <h4>
                            GMO:
                        </h4>
                        <span>
                            Sản phẩm này bao gồm các thành phần có nguồn gốc từ
                            cây trồng biến đổi gen (GE), thường được gọi là GMO.
                        </span>
                        <h4>Sự kiện dinh dưỡng:</h4>
                        <span>
                            Calo:270
                            <br>Tổng chất béo: 0%
                            <br>Natri:90mg
                            <br>Tổng Carbohydrate: 73g
                            <br>Bao gồm: 73g Đường bổ sung
                            <br>Proteim: 0g
                            <br>
                            <br>* Không phải là một nguồn đáng kể của chất béo bão hòa, chất béo chuyển hóa, cholesterol,
                            chất xơ chế độ ăn uống, vitamin D, canxi, sắt và kali
                        </span>

                        <a href="" class="primary-btn" ng-click="addToCart(SanPham)">THÊM VÀO GIỎ HÀNG</a>


                        <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>



                    </div>
                </div>
            </div>
        </div>


    </section>
</div>