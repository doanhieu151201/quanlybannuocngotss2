
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/AngularApp/Category/CrudService.js"></script>
<script src="~/Areas/AngularApp/Category/app.js"></script>
<div ng-app="DanhmucApp" ng-controller="Danhmuc">
    <div ng-init="getct()"></div>
    <div class="row">
        <input class="col-md-4" id="txtSearch"ng-model="sp" placeholder="Nhập từ khóa cần tìm" />
        <input type="submit" value="Tìm kiếm" class="btn btn-success col-md-1" />
    </div>
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Thêm
    </button>
    <table cellpadding="12" class="table-bordered table-hover table">
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Tùy chọn</th>
        </tr>
        <tr ng-repeat="item in listLoaiSP| filter : sp">
            <td>{{item.id}}</td>
            <td>{{item.TenDm}}</td>
            <td>
                <input type="button" class="btn btn-warning" value="Update" ng-click="GetLSPID(item)" data-toggle="modal" data-target="#exampleModal" />
                <input type="button" class="btn btn-danger" value="Delete" ng-click="DeletteLSP(item)" />
            </td>
        </tr>
    </table>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" role="form">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4 col-lg-4 col-sm-4">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Id:</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" placeholder="Nhập danh mục" ng-model="id" />
                                        </div>
                                        <label class="col-md-4 control-label">Tên danh mục:</label>

                                        <div class="col-md-8">
                                            <input type="text" class="form-control" placeholder="Nhập danh mục" ng-model="TenDm" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="button" id="btnSave" class="btn btn-primary" value="Submit" ng-click="Savedt()" />
                </div>
            </div>
        </div>
    </div>
</div>